{
  "version": 1,
  "deployment": {
    "provider": "vercel",
    "mode": "git-integration"
  },
  "schedule": {
    "timezone": "UTC",
    "dailyCron": "25 18 * * *",
    "notes": "1日1回。JST 03:25 / UTC 18:25"
  },
  "fetch": {
    "defaultDelayMs": 3000,
    "requestTimeoutMs": 15000,
    "userAgent": "lostspecs-fetcher/0.2 (+automation prototype; contact via repo issues)",
    "respectRobotsTxt": true,
    "respectCrawlDelay": true,
    "maxBodyChars": 1000000,
    "allowDomains": [],
    "denyDomains": []
  },
  "policy": {
    "termsComplianceMode": "conservative",
    "rules": [
      "robots.txt を尊重する",
      "Crawl-delay が指定されている場合はより長い待機時間を使用する",
      "取得に失敗したURLを連続リトライしない（次回日次実行まで待つ）",
      "User-Agent を明示する"
    ]
  },
  "scoring": {
    "thresholds": {
      "candidateReadyMin": 85,
      "needsReviewMin": 55
    },
    "defaults": {
      "labelHigh": "掲載候補",
      "labelMedium": "要レビュー",
      "labelLow": "保留"
    }
  },
  "publisher": {
    "autoApplyEnabled": true,
    "allowEvidenceUpdateAutoApply": false,
    "minConfidence": 95,
    "requireCompleteSuggestedEntry": true
  }
}
